{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "lib": ["ES2018", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [],
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/components/**/*.ts", "src/components/**/*.js", "src/components/**/*.d.ts",
    "src/components/**/*.tsx", "src/components/**/*.vue",
  ],
  "exclude": ["node_modules", "dist"]
}
